<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Everlasting Peace Memorial Park | Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="icon" href="ðŸª¦">
    <link rel="stylesheet" href="/stylesheets/login.css">
    <link rel="stylesheet" href="/boxicons/css/boxicons.min.css">
  </head>
  <body>
    <section>
        <div class="left-nav"></div>
        <div class="login-container">
            <a href="/" class="home-button" title="Go to Home">
                <i class="bi bi-house-fill"></i>
            </a>
            <div class="header">
                <h2>Everlasting Peace Memorial Park Cemetery</h2>
                <p class="subtitle">Gardens of Peace</p>
            </div>

            <!-- Error message -->
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <!-- Success message from query string -->
            <% if (typeof success !== 'undefined' && success) { %>
                <div id="success-message" class="success-message">
                    <%= success %>
                </div>
            <% } %>

            <div class="input-form">
                <form action="/login" method="POST">
                    <div class="input-columns">
                        <div class="input-group">
                            <label for="username">Email Address</label>
                            <input type="email" id="username" name="username" required placeholder="Enter your email address">
                        </div>
                        <div class="input-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" required placeholder="Enter your password">
                        </div>
                    </div>
                    <div class="input-row">
                        <div class="input-checkbox">
                            <input type="checkbox" name="remember_me" id="remember_me">
                            <label for="remember_me">Remember me</label>
                        </div>
                        <button type="submit">Login</button>
                    </div>
                    <div class="links-row">
                        <a href="/forgotpass" class="forgot-link">Forgot Password</a>
                        <span class="link-separator">â€¢</span>
                        <a href="/register" class="create-link">Create an Account</a>
                    </div>
                </form>
                            </div>
        </div>
    </section>

    <!-- Optional: auto-hide success message after 5 seconds -->
    <script>
        const successMessage = document.getElementById('success-message');
        if (successMessage) {
            setTimeout(() => {
                successMessage.style.opacity = '0';
                setTimeout(() => {
                    successMessage.style.display = 'none';
                }, 300);
            }, 5000);
        }
    </script>

    <footer>
        <%- include('partials/footer') %>
    </footer>
  </body>
  </html>