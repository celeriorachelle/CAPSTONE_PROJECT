<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Profile - Everlasting Peace Memorial Park</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>
  <!-- Sidebar -->
  <%- include('partials/sidebar') %>

  <!-- Main Content -->
  <div class="main" id="main">
    <!-- Topbar -->
    <%- include('partials/topbar', { title: "Profile" }) %>

    <div class="main-content">
      <!-- Profile Header -->
      <section class="profile-display">
        <div class="profile-left">
          <img src="/images/g.png" alt="Profile Avatar" />
          <div class="profile-actions">
            <a class="link-button" href="/settings">Profile Settings</a>
          </div>
        </div>
        <div class="profile-right">
          <h2>Your Profile</h2>
          <div class="profile-info">
            <p>Edit your details below.</p>
          </div>
        </div>
      </section>

      <!-- Edit Profile Form -->
      <div class="form-container">
        <div class="form-box">
          <form action="/update-profile" method="POST">
            <h2>Edit Profile</h2>
            <label for="fullname">Full Name</label>
            <input type="text" id="fullname" name="fullname" placeholder="Your full name" required>

            <label for="phone">Phone Number</label>
            <input type="text" id="phone" name="phone" placeholder="Your phone number" required>

            <label for="address">Address</label>
            <input type="text" id="address" name="address" placeholder="Your address" required>

            <button type="submit">Update Profile</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
      <%- include('partials/footer') %>
    </footer>
  </div>
</body>
</html>