    <script>
        // Area data
        const areas = {
            heritage: {
                name: "Heritage Gardens",
                description: "Traditional burial plots surrounded by mature oak trees and seasonal flowers.",
                available: "24 plots available",
                price: "Starting from ‚Ç±20,500"
            },
            family: {
                name: "Family Estates",
                description: "Spacious family plots with personalized memorial options and garden spaces.",
                available: "12 family plots available",
                price: "Starting from ‚Ç±35,500"
            },
            columbarium: {
                name: "Serenity Columbarium",
                description: "Beautiful indoor and outdoor niches with peaceful water features.",
                available: "156 niches available",
                price: "Starting from ‚Ç±40,200"
            },
            garden: {
                name: "Garden of Remembrance",
                description: "Tranquil memorial garden with benches, fountains, and reflection areas.",
                available: "36 memorial spaces",
                price: "Starting from ‚Ç±35,800"
            },
            chapel: {
                name: "Memorial Chapel",
                description: "Elegant chapel for services with adjacent administrative offices.",
                available: "Services available",
                price: "Contact for pricing"
            },
            veterans: {
                name: "Veterans Memorial",
                description: "Dedicated section honoring our military heroes with flag displays.",
                available: "48 plots available",
                price: "Starting from ‚Ç±45,000"
            }
        };

        let selectedArea = null;

        // Add click event listeners to map areas
        document.addEventListener('DOMContentLoaded', function() {
            const mapAreas = document.querySelectorAll('.map-area');
            
            mapAreas.forEach(area => {
                area.addEventListener('click', function() {
                    const areaId = this.getAttribute('data-area');
                    selectArea(areaId, this);
                });

                area.addEventListener('mouseenter', function() {
                    if (this !== selectedArea) {
                        this.style.filter = 'brightness(1.1)';
                    }
                });

                area.addEventListener('mouseleave', function() {
                    if (this !== selectedArea) {
                        this.style.filter = 'brightness(1)';
                    }
                });
            });
        });

        function selectArea(areaId, element) {
            // Remove previous selection
            if (selectedArea) {
                selectedArea.classList.remove('selected');
                selectedArea.style.filter = 'brightness(1)';
            }

            // Set new selection
            selectedArea = element;
            element.classList.add('selected');
            element.style.filter = 'brightness(1.2)';

            // Update info card
            const area = areas[areaId];
            document.getElementById('info-title').textContent = area.name;
            document.getElementById('info-description').textContent = area.description;
            document.getElementById('info-availability').textContent = area.available;
            document.getElementById('info-price').textContent = area.price;

            // Show info card
            document.getElementById('info-card').classList.add('active');
        }

        function closeInfoCard() {
            document.getElementById('info-card').classList.remove('active');
            if (selectedArea) {
                selectedArea.classList.remove('selected');
                selectedArea.style.filter = 'brightness(1)';
                selectedArea = null;
            }
        }
    </script>
