    <script>
        // Generate cemetery plots
        function generatePlots() {
            const plotGrid = document.getElementById('plotGrid');
            const totalPlots = 144; // 12x12 grid
            
            for (let i = 0; i < totalPlots; i++) {
                const plot = document.createElement('div');
                plot.className = 'plot';
                
                // Randomly assign occupied or available status
                if (Math.random() > 0.4) {
                    plot.classList.add('occupied');
                } else {
                    plot.classList.add('available');
                }
                
                plot.addEventListener('click', () => selectPlot(plot, i));
                plot.style.animationDelay = `${i * 0.01}s`;
                
                plotGrid.appendChild(plot);
            }
        }

        // Select plot functionality
        function selectPlot(plot, index) {
            // Remove previous selections
            document.querySelectorAll('.plot.selected').forEach(p => {
                p.classList.remove('selected');
                p.style.background = p.classList.contains('occupied') ? '#fff' : 'rgba(255,255,255,0.2)';
            });
            
            // Select current plot
            plot.classList.add('selected');
            plot.style.background = '#4a90e2';
            plot.style.boxShadow = '0 0 20px rgba(74, 144, 226, 0.6)';
            
            // Show plot information (simulated)
            showPlotInfo(index, plot.classList.contains('occupied'));
        }

        // Show plot information
        function showPlotInfo(plotNumber, isOccupied) {
            const status = isOccupied ? 'Occupied' : 'Available';
            const message = isOccupied 
                ? `Plot ${plotNumber + 1} is occupied. Click to view memorial details.`
                : `Plot ${plotNumber + 1} is available for purchase. Contact us for more information.`;
            
            // Create a temporary notification
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: rgba(0,0,0,0.9);
                color: white;
                padding: 1rem 1.5rem;
                border-radius: 8px;
                border: 1px solid rgba(255,255,255,0.2);
                z-index: 10000;
                max-width: 300px;
                backdrop-filter: blur(10px);
                animation: fadeInUp 0.3s ease;
            `;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Search functionality
        function searchRecords() {
            const firstName = document.getElementById('firstName').value;
            const middleName = document.getElementById('middleName').value;
            const lastName = document.getElementById('lastName').value;
            const yearBorn = document.getElementById('yearBorn').value;
            const yearDied = document.getElementById('yearDied').value;
            
            // Simulate search with loading effect
            const searchBtn = document.querySelector('.search-btn');
            const originalText = searchBtn.textContent;
            
            searchBtn.textContent = 'SEARCHING...';
            searchBtn.style.background = '#666';
            searchBtn.disabled = true;
            
            setTimeout(() => {
                searchBtn.textContent = originalText;
                searchBtn.style.background = 'linear-gradient(135deg, #4a5d4a, #5a6d5a)';
                searchBtn.disabled = false;
                
                // Show search results
                showSearchResults(firstName, lastName);
            }, 2000);
        }

        // Show search results
        function showSearchResults(firstName, lastName) {
            const hasQuery = firstName || lastName;
            const resultMessage = hasQuery 
                ? `Search results for: ${firstName} ${lastName}`.trim()
                : 'Please enter search criteria';
            
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: rgba(0,0,0,0.95);
                color: white;
                padding: 2rem;
                border-radius: 12px;
                border: 1px solid rgba(255,255,255,0.2);
                z-index: 10000;
                max-width: 400px;
                text-align: center;
                backdrop-filter: blur(15px);
                box-shadow: 0 20px 40px rgba(0,0,0,0.5);
            `;
            
            notification.innerHTML = `
                <h3 style="margin-bottom: 1rem; color: #4a90e2;">${resultMessage}</h3>
                <p style="margin-bottom: 1.5rem; color: #d0d0d0;">
                    ${hasQuery ? 'Searching memorial records...' : 'Enter name or dates to search our records.'}
                </p>
                <button onclick="this.parentElement.remove()" style="
                    background: linear-gradient(135deg, #4a5d4a, #5a6d5a);
                    color: white;
                    border: none;
                    padding: 0.5rem 1.5rem;
                    border-radius: 6px;
                    cursor: pointer;
                    font-weight: 600;
                ">Close</button>
            `;
            
            document.body.appendChild(notification);
        }

        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add input event listeners for real-time feedback
        document.querySelectorAll('.search-input, .search-select').forEach(input => {
            input.addEventListener('focus', function() {
                this.style.transform = 'scale(1.02)';
            });
            
            input.addEventListener('blur', function() {
                this.style.transform = 'scale(1)';
            });
        });

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            generatePlots();
            
            // Add entrance animation delay
            setTimeout(() => {
                document.querySelector('.content-section').style.opacity = '1';
                document.querySelector('.search-section').style.opacity = '1';
            }, 300);
        });

        // Add keyboard support for search
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchRecords();
            }
        });
    </script>
