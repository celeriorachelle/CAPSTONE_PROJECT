<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Booking Form</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/bookplots.css">
</head>
<body>
  <%- include('partials/sidebar') %>
  <%- include('partials/topbar', { title: "Book" }) %>  

  <div class="main" id="main">
    <div class="plot-list-section" style="margin-left: 5%; margin-top: auto;">
      <h4>All Plots</h4>
      <div class="plot-table-container">
        <table class="plot-table">
          <thead>
            <tr>
              <th>Plot No.</th>
              <th>Location</th>
              <th>Type</th>
              <th>Price</th>
              <th>Availability</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="plotTableBody">
            <% plots.forEach(plot => { %>
              <tr>
                <td><%= plot.plot_number %></td>
                <td><%= plot.location %></td>
                <td><%= plot.type %></td>
                <td>â‚±<%= plot.price.toLocaleString() %></td>
                <td><%= plot.availability %></td>
                <td>
                  <% if(plot.availability === 'available') { %>
                    <!-- BOOK button redirects to payment option page -->
                    <form action="/bookplots/option/<%= plot.plot_id %>" method="GET">
                      <button type="submit">BOOK</button>
                    </form>
                  <% } else if(plot.availability === 'pending') { %>
                    <span style="color:orange;">Pending Approval</span>
                  <% } else if(plot.availability === 'reserved') { %>
                    <span style="color:blue;">Reserved</span>
                  <% } else if(plot.availability === 'occupied') { %>
                    <span style="color:red;">Occupied</span>
                  <% } else { %>
                    <span>Not Available</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <footer>
    <%- include('partials/footer') %>
  </footer>
</body>
</html>
