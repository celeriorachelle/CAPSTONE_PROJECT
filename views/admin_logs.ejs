<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Activity Logs | Everlasting Peace Memorial Park</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="/stylesheets/admin.css" />
  <style>
    .main-content {
      background: white;
      padding: 2rem;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      margin-top: 1rem;
    }
    .main-content .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
    }
    .main-content .header h1 {
      color: #2d4a24;
      font-size: 1.8rem;
    }
    .main-content .header button {
      background: linear-gradient(135deg, #8aac7c, #6b915e);
      border: none;
      padding: 0.7rem 1.2rem;
      border-radius: 10px;
      color: white;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    .main-content .header button:hover {
      transform: scale(1.05);
      background: linear-gradient(135deg, #769c68, #587c4d);
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: #fafafa;
      border-radius: 12px;
      overflow: hidden;
    }
    thead {
      background: #8aac7c;
      color: white;
    }
    th, td {
      padding: 1rem;
      text-align: center;
      border-bottom: 1px solid #ddd;
    }
    tbody tr:hover {
      background: #f4f8f2;
    }

  /* Filter Form Styling */
    .filter-form {
      display: flex;
      gap: 1rem;
      margin-bottom: 1.5rem;
      align-items: center;
      flex-wrap: wrap;
    }
    .filter-form label {
      font-weight: 600;
      color: #2d4a24;
    }
    .filter-form select,
    .filter-form input {
      padding: 0.5rem;
      border-radius: 8px;
      border: 1px solid #ccc;
    }
    .filter-form button {
      background: #6b915e;
      color: white;
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: 0.3s;
    }
    .filter-form button:hover {
      background: #587c4d;
    }
  </style>
</head>
<body>
  <header class="admin-header">
    <h1>Admin Dashboard</h1>
    <nav>
      <ul>
        <li><a href="/admin" class="active"><i class="fas fa-home"></i> Home</a></li>
        <li><a href="/adminviewapp"><i class="fas fa-calendar-alt"></i> Appointments</a></li>
        <li><a href="/adminviewbookings"><i class="fas fa-book"></i> Bookings</a></li>
        <li><a href="/reports"><i class="fas fa-chart-bar"></i> Reports</a></li>
        <li><a href="/login/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
      </ul>
    </nav>
  </header>

  <main class="admin-main">
    <aside class="sidebar">
      <h3><i class="fas fa-tachometer-alt"></i> Dashboard Menu</h3>
      <ul>
        <li><a href="/admin"><i class="fas fa-home"></i> Dashboard Home</a></li>
        <li><a href="/admincreateb"><i class="fas fa-plus-circle"></i> Create Appointment</a></li>
        <li><a href="/adminviewapp"><i class="fas fa-list"></i> View Appointments</a></li>
        <li><a href="/burialrecord"><i class="fas fa-book"></i> Burial Records</a></li>
        <li><a href="/maps"><i class="fas fa-map"></i> Cemetery Map</a></li>
        <li><a href="/adminviewbookings"><i class="fas fa-list"></i> Client Transactions</a></li>
        <li><a href="/admin_inventory"><i class="fas fa-clipboard-list"></i> Inventory</a></li>
        <li><a href="/admin_logs" class="active"><i class="fas fa-clipboard-list"></i> Logs</a></li>
      </ul>
    </aside>

    <section class="content">
      <header class="topbar">
        <div class="topbar-left">
          <h2>Activity Logs</h2>
          <div class="date-time" id="currentDateTime"></div>
        </div>
      </header>

      <div class="main-content">
        <div class="header">
          <h1>Activity Logs</h1>
        </div>

  <!-- Filter Form -->
        <form method="get" class="filter-form">
          <label>Role:</label>
          <select name="role">
            <option value="all" <%= filters.role === 'all' ? 'selected' : '' %>>All</option>
            <option value="admin" <%= filters.role === 'admin' ? 'selected' : '' %>>Admin</option>
            <option value="staff" <%= filters.role === 'staff' ? 'selected' : '' %>>Staff</option>
            <option value="user" <%= filters.role === 'user' ? 'selected' : '' %>>User</option>
          </select>

          <label>From:</label>
          <input type="date" name="startDate" value="<%= filters.startDate %>">

          <label>To:</label>
          <input type="date" name="endDate" value="<%= filters.endDate %>">

          <button type="submit"><i class="fas fa-filter"></i> Apply</button>
          <button type="button" id="resetFilters"><i class="fas fa-undo"></i> Reset</button>
          <button type="button" id="clearLogs"><i class="fas fa-trash"></i> Clear Logs</button>
        </form>

        <div class="content-area">
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>User</th>
                <th>Role</th>
                <th>Action</th>
                <th>Details</th>
                <th>Timestamp</th>
              </tr>
            </thead>
            <tbody>
              <% if (logs.length === 0) { %>
                <tr><td colspan="6">No logs found.</td></tr>
              <% } else { %>
                <% logs.forEach(log => { %>
                  <tr>
                    <td><%= log.log_id %></td>
                    <td><%= log.user_name %></td>
                    <td><%= log.user_role || 'N/A' %></td>
                    <td><%= log.action %></td>
                    <td><%= log.details %></td>
                    <td><%= new Date(log.timestamp).toLocaleString() %></td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
            <!-- Pagination controls -->
            <div class="pagination-controls" style="display:flex;justify-content:space-between;align-items:center;margin-top:12px;">
              <div>
                <label for="pageSize">Rows per page:</label>
                <select id="pageSize" style="padding:6px;border-radius:6px;border:1px solid #ccc;">
                  <option value="5">5</option>
                  <option value="10" selected>10</option>
                  <option value="20">20</option>
                  <option value="50">50</option>
                </select>
              </div>
              <div>
                <button id="firstPage" class="btn" style="margin-right:6px;padding:6px 10px;border-radius:6px;background:#eef7ed;border:1px solid #cfe6c9;">First</button>
                <button id="prevPage" class="btn" style="margin-right:6px;padding:6px 10px;border-radius:6px;background:#eef7ed;border:1px solid #cfe6c9;">Prev</button>
                <span id="pageInfo" style="font-weight:600;margin:0 8px;">Page 1 of 1</span>
                <button id="nextPage" class="btn" style="margin-right:6px;padding:6px 10px;border-radius:6px;background:#eef7ed;border:1px solid #cfe6c9;">Next</button>
                <button id="lastPage" class="btn" style="padding:6px 10px;border-radius:6px;background:#eef7ed;border:1px solid #cfe6c9;">Last</button>
              </div>
            </div>
        </div>
      </div>
    </section>
  </main>

  <script>
    // Live date/time
    setInterval(() => {
      document.getElementById("currentDateTime").textContent = new Date().toLocaleString();
    }, 1000);

  // Reset filters
    document.getElementById("resetFilters").addEventListener("click", () => {
      window.location.href = "/admin_logs";
    });

  // Clear logs
    document.getElementById("clearLogs").addEventListener("click", async () => {
      if (confirm("Are you sure you want to clear all logs?")) {
        const res = await fetch("/admin_logs/clear", { method: "POST" });
        const data = await res.json();
        if (data.success) location.reload();
        else alert("Failed to clear logs");
      }
    });

  // Client-side pagination for logs table
  (function(){
    const tbody = document.querySelector('table tbody');
    const rows = Array.from(tbody.querySelectorAll('tr'));
    let pageSize = parseInt(document.getElementById('pageSize')?.value || 10, 10);
    let currentPage = 1;

    function render() {
      const totalPages = Math.max(1, Math.ceil(rows.length / pageSize));
      const start = (currentPage - 1) * pageSize;
      const end = start + pageSize;
      rows.forEach((r, i) => r.style.display = (i >= start && i < end) ? '' : 'none');
      document.getElementById('pageInfo').textContent = `Page ${currentPage} of ${totalPages}`;
      document.getElementById('prevPage').disabled = currentPage === 1;
      document.getElementById('firstPage').disabled = currentPage === 1;
      document.getElementById('nextPage').disabled = currentPage === totalPages;
      document.getElementById('lastPage').disabled = currentPage === totalPages;
    }

    document.getElementById('pageSize').addEventListener('change', (e) => {
      pageSize = parseInt(e.target.value, 10);
      currentPage = 1;
      render();
    });

    document.getElementById('prevPage').addEventListener('click', () => { if (currentPage > 1) { currentPage--; render(); } });
    document.getElementById('nextPage').addEventListener('click', () => { const totalPages = Math.max(1, Math.ceil(rows.length / pageSize)); if (currentPage < totalPages) { currentPage++; render(); } });
    document.getElementById('firstPage').addEventListener('click', () => { currentPage = 1; render(); });
    document.getElementById('lastPage').addEventListener('click', () => { currentPage = Math.max(1, Math.ceil(rows.length / pageSize)); render(); });

    // initialize
    render();
  })();
  </script>
</body>
</html>