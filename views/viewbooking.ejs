<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>View Bookings</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/viewbooking.css">
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <div>
      <div class="sidebar-header">
        <h2>Everlasting Peace<br>Memorial Park Cemetery</h2>
      </div>
      <nav>
        <a href="/">Home</a>
        <a href="/book">Book</a>
        <a href="/viewbooking">View Bookings</a>
        <a href="/burialrecord">Booking Records</a>
        <a href="/support">Support</a>
        <a href="/">View Map</a>
      </nav>
    </div>
    <div class="sidebar-footer">
      &copy; 2025 Everlasting Peace
    </div>
  </div>

  <!-- Toggle Button -->
  <div class="toggle-btn" id="toggleBtn">‚óÄ</div>

  <!-- Main content -->
  <div class="main">
    <!-- Topbar -->
    <div class="topbar">
      <h1>View Bookings</h1>
      <div class="icon-buttons">
        <div class="icon-btn">üîî</div>
        <div class="icon-btn">üë§</div>
      </div>
    </div>

    <!-- Content area -->
    <div class="main-content">
      <div class="rows-per-page">
      <form method="GET" action="/viewbooking">
        <label for="limit">Rows per page:</label>
        <select name="limit" id="limit" onchange="this.form.submit()">
          <option value="10" <%= limit === 10 ? 'selected' : '' %>>10</option>
          <option value="20" <%= limit === 20 ? 'selected' : '' %>>20</option>
          <option value="50" <%= limit === 50 ? 'selected' : '' %>>50</option>
        </select>
        <input type="hidden" name="page" value="<%= page %>">
      </form>
    </div>
      <table>
        <thead>
          <tr>
            <th>Plot Type</th>
            <th>Plot Number</th>
            <th>Location</th>
            <th>Plot ID</th>
            <th>Booking Date</th>
            <th>Visit Time</th>
            <th>Status</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <% if (bookings.length > 0) { %>
            <% bookings.forEach(booking => { %>
              <tr>
                <td><%= booking.plot_type || '-' %></td>
                <td><%= booking.plot_number || '-' %></td>
                <td><%= booking.location || '-' %></td>
                <td><%= booking.plot_id || '-' %></td>
                <td><%= booking.booking_date ? new Date(booking.booking_date).toLocaleDateString() : '-' %></td>
                <td><%= booking.visit_time || '-' %></td>
                <td><%= booking.status || '-' %></td>
                <td><%= booking.notes || '-' %></td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="8">No bookings found.</td>
            </tr>
          <% } %>
        </tbody>
        <div class="pagination">
        <% if (totalPages > 1) { %>
          <% if (page > 1) { %>
            <a href="/viewbooking?page=<%= page - 1 %>&limit=<%= limit %>">Previous</a>
          <% } %>

          <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/viewbooking?page=<%= i %>&limit=<%= limit %>" 
              class="<%= i === page ? 'active' : '' %>">
              <%= i %>
            </a>
          <% } %>

          <% if (page < totalPages) { %>
            <a href="/viewbooking?page=<%= page + 1 %>&limit=<%= limit %>">Next</a>
          <% } %>
        <% } %>
      </div>
      </table>
      <div class="back-button">
        <a href="/book">‚Üê Back to Booking Page</a>
      </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
      <%- include('partials/footer') %>
    </footer>
  </div>

  <script>
    const sidebar = document.getElementById("sidebar");
    const btn = document.getElementById("toggleBtn");

    btn.addEventListener("click", () => {
      sidebar.classList.toggle("collapsed");
      btn.textContent = sidebar.classList.contains("collapsed") ? "‚ñ∂" : "‚óÄ";
    });
  </script>
</body>
</html>
