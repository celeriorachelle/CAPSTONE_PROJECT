<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Booking Form</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/book.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/sidebar') %>

  <div class="main" id="main">
    <%- include('partials/topbar', { title: "Schedule a Service" }) %>

    <div class="form-container">
      <h2>BOOKING FORM</h2>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message" style="color:red; margin-bottom:10px;">
          <%= error %>
        </div>
      <% } %>

      <% const data = (typeof bookingData !== 'undefined' && bookingData) ? bookingData : {}; %>

      <form action="/book" method="POST" class="form-grid">
        <div class="form-group">
          <label for="firstname">First Name</label>
          <input type="text" name="firstname" id="firstname" required value="<%= data.firstname || '' %>">
        </div>

        <div class="form-group">
          <label for="lastname">Last Name</label>
          <input type="text" name="lastname" id="lastname" required value="<%= data.lastname || '' %>">
        </div>

        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" name="email" id="email" required value="<%= data.email || '' %>">
        </div>

        <div class="form-group">
          <label for="phone">Phone Number</label>
          <input type="text" name="phone" id="phone" required value="<%= data.phone || '' %>">
        </div>

        <div class="form-group">
          <label for="service-type">Service Type</label>
          <select id="service-type" name="serviceType" required>
            <option value="">-- Select Service Type --</option>
            <option value="plot-booking" <%= data.serviceType === 'plot-booking' ? 'selected' : '' %>>Plot Booking</option>
            <option value="memorial" <%= data.serviceType === 'memorial' ? 'selected' : '' %>>Memorial</option>
            <option value="burial" <%= data.serviceType === 'burial' ? 'selected' : '' %>>Burial</option>
          </select>
        </div>

        <!-- Booking Date (required for all services) -->
        <div class="form-group">
          <label for="booking-date">Booking Date</label>
          <input type="date" name="bookingDate" id="booking-date" required value="<%= data.bookingDate || '' %>">
        </div>

        <!-- Schedule fields for memorial/burial (visit time only) -->
        <div id="schedule-fields" style="display:none;">
          <div class="form-group">
            <label for="visit-time">Preferred Visit Time</label>
            <select name="visitTime" id="visit-time">
              <option <%= data.visitTime === '08:00 AM' ? 'selected' : '' %>>08:00 AM</option>
              <option <%= data.visitTime === '09:00 AM' ? 'selected' : '' %>>09:00 AM</option>
              <option <%= data.visitTime === '10:00 AM' ? 'selected' : '' %>>10:00 AM</option>
              <option <%= data.visitTime === '01:00 PM' ? 'selected' : '' %>>01:00 PM</option>
              <option <%= data.visitTime === '02:00 PM' ? 'selected' : '' %>>02:00 PM</option>
              <option <%= data.visitTime === '03:00 PM' ? 'selected' : '' %>>03:00 PM</option>
              <option <%= data.visitTime === '04:00 PM' ? 'selected' : '' %>>04:00 PM</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label for="notes">Notes / Special Requests</label>
          <textarea id="notes" name="notes" placeholder="Optional"><%= data.notes || '' %></textarea>
        </div>

        <div class="form-actions">
          <button type="reset">Clear</button>
          <button type="submit">Next</button>
        </div>
      </form>
    </div>

    <footer>
      <%- include('partials/footer') %>
    </footer>
  </div>

  <script>
    // Sidebar toggle
    const sidebar = document.getElementById("sidebar");
    const btn = document.getElementById("toggleBtn");
    btn.addEventListener("click", () => {
      sidebar.classList.toggle("collapsed");
      btn.textContent = sidebar.classList.contains("collapsed") ? "▶" : "◀";
    });

    // Show schedule fields only for memorial or burial
    const serviceType = document.getElementById('service-type');
    const scheduleFields = document.getElementById('schedule-fields');

    function toggleScheduleFields() {
      if (serviceType.value === 'memorial' || serviceType.value === 'burial') {
        scheduleFields.style.display = 'block';
        scheduleFields.querySelectorAll('select').forEach(el => el.required = true);
      } else {
        scheduleFields.style.display = 'none';
        scheduleFields.querySelectorAll('select').forEach(el => el.required = false);
      }
    }

    serviceType.addEventListener('change', toggleScheduleFields);
    window.addEventListener('DOMContentLoaded', toggleScheduleFields);
  </script>
</body>
</html>
