<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Support - Everlasting Peace Memorial Park</title>
  <link rel="stylesheet" href="/stylesheets/support.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <!-- Sidebar -->
  <%- include('partials/sidebar') %>

  <div class="main" id="main">
    <!-- Topbar -->
    <%- include('partials/topbar', { title: "Support" }) %>

    <div class="content">
      <!-- FAQ -->
      <div class="faq-container">
        <h2>Frequently Asked Questions (FAQ)</h2>

        <div class="faq-item">
          <div class="faq-question">
            <span>📅 How do I book an appointment?</span>
            <span>▼</span>
          </div>
          <div class="faq-answer">
            To book an appointment, go to the "Book" section in the sidebar and fill out the booking form.
          </div>
        </div>

        <div class="faq-item">
          <div class="faq-question">
            <span>⏰ Support Hours & Response Time</span>
            <span>▼</span>
          </div>
          <div class="faq-answer">
            Our team is available <strong>Monday–Friday, 8:00 AM to 5:00 PM</strong>.  
            We typically respond within 24 hours.
          </div>
        </div>

        <div class="faq-item">
          <div class="faq-question">
            <span>📍 Where is the cemetery located?</span>
            <span>▼</span>
          </div>
          <div class="faq-answer">
            You can view the full address and map in the "View Map" section of the sidebar.
          </div>
        </div>
      </div>

      <!-- Contact Support -->
      <div class="contact-card">
        <h2>Contact Support</h2>
        <div class="contact-info">
          <div>📧 <span>Email:</span> support@everlastingpeace.com</div>
          <div>📞 <span>Phone:</span> +63 9670072385</div>
          <div>📍 <span>Address:</span> Everlasting Peace Memorial Park, Malabon City, Philippines</div>
        </div>
      </div>
    </div>
      <footer>
        <%- include('partials/footer') %>
    </footer>
  </div>

  <script>
    const sidebar = document.getElementById("sidebar");
    const toggleBtn = document.getElementById("toggleBtn");

    toggleBtn.addEventListener("click", () => {
      sidebar.classList.toggle("collapsed");
      toggleBtn.textContent = sidebar.classList.contains("collapsed") ? "▶" : "◀";
    });

    // Accordion effect
    document.querySelectorAll(".faq-item").forEach(item => {
      item.addEventListener("click", () => {
        document.querySelectorAll(".faq-item").forEach(el => {
          if (el !== item) el.classList.remove("active");
        });
        item.classList.toggle("active");
      });
    });

for    // Notification popup toggle (guarded; topbar manages this by default)
    const notifIcon = document.getElementById("notif-icon");
    const notifPopup = document.getElementById("notification-popup");
    if (notifIcon && notifPopup) {
      notifIcon.addEventListener("click", (e) => {
        e.stopPropagation();
        notifPopup.classList.toggle("hidden");
      });

      document.addEventListener("click", function(e) {
        if (!notifPopup.contains(e.target) && !notifIcon.contains(e.target)) {
          notifPopup.classList.add("hidden");
        }
      });
    }

    // Profile icon redirect (guarded)
    const profileIcon = document.getElementById("profile-icon");
    if (profileIcon) {
      profileIcon.addEventListener("click", (e) => {
        e.stopPropagation();
        window.location.href = "/settings";
      });
    }
  </script>
</body>
</html>