<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Staff | View Client Bookings</title>
  <link rel="stylesheet" href="/stylesheets/staff_viewbookings.css">
</head>
<body>
  <div class="sidebar">
    <h2>Staff Panel</h2>
    <ul>
      <li><a href="/staff_dashboard">🏠 Dashboard</a></li>
      <li><a href="/staff_viewbookings" class="active">📘 View Bookings</a></li>
      <li><a href="/staff_installments">💰 Track Installments</a></li>
      <li><a href="/staff_logs">🗂 Activity Logs</a></li>
      <li><a href="/logout">🚪 Logout</a></li>
    </ul>
  </div>

  <div class="main">
    <header>
      <h1>All Client Bookings</h1>
      <input id="searchInput" type="text" placeholder="🔍 Search by name or status...">
    </header>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Client</th>
          <th>Service</th>
          <th>Booking Date</th>
          <th>Status</th>
          <th>Payment</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="bookingTable">
        <% bookings.forEach(b => { %>
          <tr>
            <td><%= b.id %></td>
            <td><%= b.clientName %></td>
            <td><%= b.service %></td>
            <td><%= new Date(b.date).toLocaleDateString() %></td>
            <td class="status <%= b.status %>"><%= b.status %></td>
            <td class="status <%= b.payment_status %>">
              <%= b.payment_status ? b.payment_status : 'No Payment' %>
            </td>
            <td>
              <% if (b.payment_status === 'pending') { %>
                <button class="btn-confirm" onclick="confirmPayment(<%= b.id %>)">Confirm</button>
              <% } else { %>
                <span class="done">✅</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    // Search Functionality
    const searchInput = document.getElementById("searchInput");
    searchInput.addEventListener("input", function() {
      const term = this.value.toLowerCase();
      document.querySelectorAll("#bookingTable tr").forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(term) ? "" : "none";
      });
    });

    // Confirm Payment
    function confirmPayment(id) {
      if (!confirm("Confirm payment for this booking?")) return;
      fetch(`/staff_viewbookings/confirm/${id}`, { method: "POST" })
        .then(res => res.json())
        .then(data => {
          if (data.success) location.reload();
          else alert("Error confirming payment.");
        });
    }
  </script>
</body>
</html>
