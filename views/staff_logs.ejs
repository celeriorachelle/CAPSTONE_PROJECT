<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Staff | Activity Logs</title>
  <link rel="stylesheet" href="/stylesheets/staff_logs.css">
</head>
<body>
  <div class="sidebar">
    <h2>Staff Panel</h2>
    <ul>
      <li><a href="/staff_dashboard">🏠 Dashboard</a></li>
      <li><a href="/staff_viewbookings">📘 View Bookings</a></li>
      <li><a href="/staff_installments">💰 Track Installments</a></li>
      <li><a href="/staff_logs" class="active">🗂 Activity Logs</a></li>
      <li><a href="/logout">🚪 Logout</a></li>
    </ul>
  </div>

  <div class="main">
    <header>
      <h1>Staff Activity Logs</h1>
      <input id="searchInput" type="text" placeholder="🔍 Search by staff name, action, or date...">
    </header>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Staff Name</th>
          <th>Action</th>
          <th>Details</th>
          <th>Timestamp</th>
        </tr>
      </thead>
      <tbody id="logsTable">
        <% logs.forEach(log => { %>
          <tr>
            <td><%= log.log_id %></td>
            <td><%= log.firstname ? log.firstname + ' ' + log.lastname : 'Unknown' %></td>
            <td><%= log.action %></td>
            <td><%= log.details %></td>
            <td><%= new Date(log.timestamp).toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    // Simple search filter
    document.getElementById("searchInput").addEventListener("input", function() {
      const term = this.value.toLowerCase();
      document.querySelectorAll("#logsTable tr").forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(term) ? "" : "none";
      });
    });
  </script>
</body>
</html>
