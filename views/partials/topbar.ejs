<div class="topbar" id="topbar">
  <h1><%= title %></h1> <!-- dynamic title -->
  <div class="icon-buttons">
    <!-- Notifications -->
    <div class="icon-btn" id="notif-icon">
      <i class="fas fa-bell"></i>
      <span id="notif-badge" class="notif-badge hidden">0</span>
    </div>

    <!-- Profile (clickable with link) -->
    <a href="/settings" class="icon-btn profile-btn" id="profile-icon">
      <i class="fas fa-user"></i>
    </a>
  </div>
</div>

<!-- Notification Popup -->
<div id="notification-popup" class="notification-popup hidden">
  <h3>Notifications <span id="notif-count" class="notif-count hidden">0</span></h3>
  <div id="notificationsList">
    <p>Loading notifications...</p>
  </div>
</div>

<style>
/* TOPBAR */
.topbar {
  background: #101b0d;
  color: rgb(29, 21, 21);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18px 30px;
  position: sticky;
  top: 0;
  z-index: 900;
  font-weight: 600;
  box-shadow: 0 4px 6px rgba(0,0,0,0.25);
}
.topbar h1 {
  font-family: 'CMU Serif', serif;
  font-size: 20px;
  font-weight: 500;
  color: #ffffff;
  letter-spacing: 0.5px;
  transition: color 0.3s ease;
}
.topbar h1:hover {
  color: #9fef9f;
}

/* ICON BUTTONS */
.icon-buttons {
  display: flex;
  gap: 12px;
}

.icon-btn {
  background-color: #ffffff1c;
  border: 1px solid #b2d8b2;
  border-radius: 50%;
  width: 42px;
  height: 42px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  cursor: pointer;
  color: rgb(10, 9, 9);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.icon-btn:hover {
  background: linear-gradient(135deg, #4caf50, #7cb342);
  transform: scale(1.1) rotate(5deg);
  box-shadow: 0 4px 12px rgba(76, 175, 80, 0.6);
}

.icon-btn:active {
  transform: scale(0.95);
}

/* PROFILE BTN (Clickable) */
.profile-btn {
  text-decoration: none;
  color: inherit;
}

/* NOTIFICATION BADGE */
.notif-badge {
  position: absolute;
  top: 6px;
  right: 6px;
  background: #ff4444;
  color: white;
  font-size: 12px;
  font-weight: bold;
  padding: 2px 6px;
  border-radius: 10px;
  animation: pulseBadge 1.5s infinite;
}
@keyframes pulseBadge {
  0% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.2); opacity: 0.8; }
  100% { transform: scale(1); opacity: 1; }
}

/* NOTIFICATION POPUP */
.notification-popup {
  position: absolute;
  top: 70px;
  right: 40px;
  background: #fff;
  border: 1px solid #cce5cc;
  border-radius: 14px;
  padding: 20px;
  width: 320px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.25);
  z-index: 1000;
  transform: translateY(-15px);
  opacity: 0;
  pointer-events: none;
  transition: all 0.35s ease;
}

.notification-popup.show {
  transform: translateY(0);
  opacity: 1;
  pointer-events: auto;
}

.notification-popup h3 {
  margin-bottom: 12px;
  font-size: 16px;
  color: #155724;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* Notification list */
.notification-popup ul {
  list-style: none;
  padding: 0;
  margin: 0;
  max-height: 220px;
  overflow-y: auto;
}

.notification-popup ul li {
  padding: 10px 0;
  border-bottom: 1px solid #eee;
  font-size: 14px;
  color: #333;
  display: flex;
  align-items: center;
  gap: 10px;
  transition: background 0.2s ease;
}

.notification-popup ul li:last-child {
  border-bottom: none;
}

.notification-popup ul li:hover {
  background: #f1f9f1;
  border-radius: 8px;
}

.notification-popup ul li i {
  color: #4caf50;
}

/* HIDDEN CLASS */
.hidden {
  display: none;
}
</style>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
