<style>
/* SIDEBAR + TOGGLE STYLES */
.sidebar {
  width: 250px;
  background:#101b0d;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  transition: transform 0.35s ease, background 0.2s ease;
  transform: translateX(0);
  z-index: 1000;
  box-shadow: 4px 0 12px rgba(0,0,0,0.25);
}

.sidebar.collapsed {
  transform: translateX(-100%);
}

/* Ensure the main content shifts when sidebar is present */
.main {
  transition: margin-left 0.35s ease, filter 0.25s ease;
  margin-left: 250px; /* default space for sidebar */
}

.sidebar.collapsed ~ .main {
  margin-left: 0;
}

.sidebar-header {
  text-align: center;
  padding: 22px 18px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.15);
  font-family: 'Merriweather', serif;
  animation: fadeIn 0.4s ease;
}

.sidebar-header h2 {
  font-size: 16px;
  font-weight: 600;
  line-height: 1.4;
  letter-spacing: 0.3px;
}

.sidebar nav {
  margin-top: 55px;
  display: flex;
  flex-direction: column;
  gap: 40px; 
}

.sidebar nav a {
  padding: 12px 16px;
  text-decoration: none;
  color: #f5f5f5;
  border-radius: 8px;
  margin: 0 16px;
  font-weight: 500;
  transition: background-color 0.2s ease, color 0.2s ease;
  position: relative;
  font-family: 'Poppins', sans-serif;
  font-size: 14px;
  letter-spacing: 0.4px;
}

/* Hover */
.sidebar nav a:hover {
  background: rgba(255,255,255,0.08);
}
.sidebar nav a.active {
  background: #9dab6c;
  color: #101b0d;
}

.sidebar nav a:focus-visible {
  outline: 2px solid #9dab6c;
  outline-offset: 2px;
}

/* TOGGLE BUTTON */
.toggle-btn {
  position: fixed;
  top: 16px;
  left: 264px; /* add a small gap from the sidebar edge */
  background: #101b0d;
  border: 1px solid rgba(255,255,255,0.4);
  border-radius: 6px;
  width: 40px;
  height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  color: white;
  font-size: 20px;
  transition: left 0.3s ease, background 0.3s ease, border-color 0.2s ease;
  z-index: 1100;
}

.toggle-btn:hover {
  background: #0c140d;
  border-color: rgba(255,255,255,0.6);
}

.sidebar.collapsed + .toggle-btn {
  left: 14px; /* small spacing from the viewport edge when collapsed */
}

/* ANIMATIONS */
@keyframes fadeIn {
  from {opacity: 0; transform: translateY(-10px);} 
  to {opacity: 1; transform: translateY(0);} 
}

/* Dark mode styles (basic variables) */
:root {
  --bg: #ffffff;
  --text: #222222;
  --muted: #555;
}
body.dark-mode, .dark-mode .main {
  background: #0f1720;
  color: #e6eef6;
}
body.dark-mode .sidebar {
  background: #08110a;
}
body.dark-mode .toggle-btn {
  background: #08110a;
  border-color: rgba(230,238,246,0.06);
}

</style>

<script>
const sidebar = document.getElementById("sidebar");
const toggleBtn = document.getElementById("toggleBtn");

// Apply dark-mode from cookie or localStorage across the whole site
(function applyDarkModeSetting() {
  try {
    const ls = localStorage.getItem('darkMode');
    const cookieMatch = document.cookie.match(/(?:^|; )darkMode=(true|false)/);
    const cookieVal = cookieMatch ? cookieMatch[1] : null;
    const enabled = (ls === 'true') || (cookieVal === 'true');
    if (enabled) document.body.classList.add('dark-mode');
  } catch (e) {
    console.error('Dark mode apply error', e);
  }
})();

toggleBtn.addEventListener("click", () => {
  sidebar.classList.toggle("collapsed");
  // also toggle a class on body to allow global adjustments if needed
  document.body.classList.toggle('sidebar-collapsed', sidebar.classList.contains('collapsed'));
  // toggleBtn.textContent = sidebar.classList.contains("collapsed") ? "\u25B6" : "\u25C0";
});

// Auto-set active link based on current path
(function() {
  const links = Array.from(document.querySelectorAll('.sidebar nav a'));
  const normalize = (p) => {
    try {
      return new URL(p, window.location.origin).pathname.replace(/\/+$/, '') || '/';
    } catch (e) {
      return '/';
    }
  };
  const current = normalize(window.location.pathname);
  let best = null;
  links.forEach(link => {
    const lp = normalize(link.getAttribute('href'));
    if (current === lp || (lp !== '/' && current.startsWith(lp + (lp.endsWith('/') ? '' : '/')))) {
      if (!best || lp.length > best.path.length) best = { el: link, path: lp };
    } else if (lp === '/' && current === '/') {
      if (!best) best = { el: link, path: lp };
    }
  });
  if (best && best.el) {
    links.forEach(l => l.classList.remove('active'));
    best.el.classList.add('active');
  }
})();
</script>
