.hamburger-btn {
  background: none;
  border: none;
  color: white;
  font-size: 20px;
  cursor: pointer;
}

.hamburger-btn:hover {
  color: #9dab6c;
}
</style>

<!-- Script -->
<script>
const sidebar = document.getElementById("sidebar");
const hamburgerBtn = document.getElementById("hamburgerBtn");

hamburgerBtn.addEventListener("click", () => {
  sidebar.classList.toggle("collapsed");
});
</script>
