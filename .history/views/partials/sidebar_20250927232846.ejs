<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
/* SIDEBAR */
.sidebar {
  width: 250px;
  background: #101b0d;
  color: white;
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  transition: width 0.3s ease;
  z-index: 1000;
  box-shadow: 4px 0 10px rgba(0,0,0,0.25);
}

.sidebar.collapsed {
  width: 80px; /* shrink mode */
}

/* HEADER */
.sidebar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid rgba(203, 203, 203, 0.25);
  font-family: 'CMU Serif', serif;
}

.sidebar-header h2 {
  font-size: 16px;
  font-weight: 500;
  line-height: 1.4;
}

.sidebar.collapsed .sidebar-header h2 {
  display: none; /* hide title in collapsed mode */
}

/* NAVIGATION */
.sidebar nav {
  margin-top: 30px;
  display: flex;
  flex-direction: column;
  gap: 8px; /* spacing between links */
}

.sidebar nav a {
  padding: 12px 18px;
  text-decoration: none;
  color: white;
  border-radius: 6px;
  margin: 0 12px;
  font-weight: 400;
  transition: background 0.3s ease, color 0.3s ease;
  font-family: 'CMU Serif', serif;
  font-size: 14px;
  position: relative;
}

.sidebar nav a:hover,
.sidebar nav a.active {
  background: #155724;
}

/* TOOLTIP for collapsed mode */
.sidebar.collapsed nav a {
  text-align: center;
  font-size: 0; /* hide text visually */
}

.sidebar.collapsed nav a::before {
  content: attr(data-tooltip);
  position: absolute;
  left: 100%;
  top: 50%;
  transform: translateY(-50%);
  background: #333;
  color: #fff;
  padding: 4px 8px;
  font-size: 12px;
  border-radius: 4px;
  white-space: nowrap;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.2s ease;
}

.sidebar.collapsed nav a:hover::before {
  opacity: 1;
}

/* HAMBURGER BUTTON */
.hamburger-btn {
  background: none;
  border: none;
  color: white;
  font-size: 20px;
  cursor: pointer;
}

.hamburger-btn:hover {
  color: #9dab6c;
}
</style>

<script>
const sidebar = document.getElementById("sidebar");
const hamburgerBtn = document.getElementById("hamburgerBtn");

hamburgerBtn.addEventListener("click", () => {
  sidebar.classList.toggle("collapsed");
});
</script>
