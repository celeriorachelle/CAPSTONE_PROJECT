    <div class="profile-dropdown-wrapper">
      <div class="profile-btn">
        <i class="fas fa-user"></i>
      </div>
      <div class="dropdown-toggle">
        <i class="fas fa-caret-down"></i>
      </div>
      <div class="dropdown-menu">
        <a href="/profile" class="dropdown-link">Profile</a>
