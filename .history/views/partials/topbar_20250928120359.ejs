<div class="topbar">
  <div class="topbar-right">
    <!-- Notifications -->
    <div class="notification-btn" id="notifBtn">
      <i class="fas fa-bell"></i>
      <span class="notif-badge">3</span> <!-- example count -->
      <div class="notif-dropdown" id="notifDropdown">
        <p class="notif-header">Notifications</p>
        <a href="/notifications" class="notif-link">View all notifications</a>
      </div>
    </div>

    <!-- Profile -->
    <div class="profile-wrapper">
      <div class="profile-btn" id="profileBtn">
        <i class="fas fa-user"></i>
      </div>
      <div class="dropdown-toggle" id="profileToggle">
        <i class="fas fa-caret-down"></i>
      </div>
      <div class="dropdown-menu" id="profileDropdown">
        <a href="/profile" class="dropdown-link">Profile</a>
        <a href="/settings" class="dropdown-link">Settings</a>
        <a href="/logout" class="dropdown-link">Logout</a>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const profileWrapper = document.querySelector(".profile-wrapper");
  const notifBtn = document.getElementById("notifBtn");
  const notifDropdown = document.getElementById("notifDropdown");

  // Profile toggle
  const dropdownToggle = profileWrapper.querySelector(".dropdown-toggle");
  profileWrapper.addEventListener("click", () => {
    profileWrapper.classList.toggle("active");
    if (dropdownToggle) dropdownToggle.classList.toggle("active");
  });

  // Notifications toggle
  notifBtn.addEventListener("click", (e) => {
    e.stopPropagation();
    notifDropdown.style.display = notifDropdown.style.display === "block" ? "none" : "block";
  });

  // Close dropdowns on outside click
  document.addEventListener("click", (e) => {
    if (!profileWrapper.contains(e.target)) {
      profileWrapper.classList.remove("active");
      if (dropdownToggle) dropdownToggle.classList.remove("active");
    }
    if (!notifBtn.contains(e.target)) {
      notifDropdown.style.display = "none";
    }
  });

  // Highlight active link in profile dropdown
  const currentPath = window.location.pathname;
  document.querySelectorAll('#profileDropdown .dropdown-link').forEach(link => {
    if (link.getAttribute('href') === currentPath) {
      link.classList.add('active');
    }
  });
});
</script>

